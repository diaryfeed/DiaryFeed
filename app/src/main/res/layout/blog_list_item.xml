<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/main_blog_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/blog_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_placeholder"/>

            <TextView
                android:id="@+id/blog_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/blog_image"
                android:text="Apple MacBook Air Core i5 5th Gen - (8 GB/128 GB SSD/Mac OS Sierra)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/blog_like_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/blog_user_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/blog_image"
                android:src="@drawable/action_like_gray"/>

            <TextView
                android:id="@+id/blog_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/blog_like_btn"
                android:layout_below="@id/blog_user_name"/>

            <ImageView
                android:id="@+id/blog_bookmarks"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/blog_user_name"
                android:src="@drawable/ic_bookmark_border_black_24dp"
                android:layout_toRightOf="@id/blog_like_count"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/blog_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blog_desc"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/blog_image"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColor="@color/background_Image_tint"
                android:text="username"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/blog_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/blog_desc"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/blog_user_name"
                android:text="date"
                android:textColor="@color/background_Image_tint"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>